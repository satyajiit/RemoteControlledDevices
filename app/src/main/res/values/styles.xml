<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>






    <style name="upd" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Making Connection to HC-05 Bluetooth Device..</item>

        <item name="DialogSpotColor">@color/yello</item>
        <item name="DialogSpotCount">7</item>
    </style>


    <style name="fetch" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Decrypting....</item>

        <item name="DialogSpotColor">@color/yello</item>
        <item name="DialogSpotCount">7</item>
    </style>

</resources>
